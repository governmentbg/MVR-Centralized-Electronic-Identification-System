{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "System": "Information",
        "Microsoft": "Information"
      }
    },
    "Properties": {
      "EnvironmentSource": "xxx-Local"
    },
    "Using": [
      "Serilog.Expressions"
    ],
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "RequestPath like '/health%' and @l = 'Information'"
        }
      },
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "EndsWith(RequestPath, '/metrics')"
        }
      }
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.ff zzz} [{Level:u4}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "log/eID-PJS-Application.log",
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": 10,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.ff zzz} [{Level:u4}] {Message}{NewLine}{Exception}"
        }
      }
      //,{
      //  "Name": "DurableHttpUsingFileSizeRolledBuffers",
      //  "Args": {
      //    "requestUri": "http://localhost/",
      //    "textFormatter": "Serilog.Formatting.Elasticsearch.ElasticsearchJsonFormatter,Serilog.Formatting.Elasticsearch",
      //    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.ff zzz} [{Level:u4}] {Message}{NewLine}{Exception}",
      //    "bufferBaseFileName": "log/eID-PJS-Application_BufferedLogs.log",
      //    "bufferFileSizeLimitBytes": 10485760,
      //    "retainedBufferFileCountLimit": 10
      //  }
      //}
    ]
  },
  "RabbitMqTransportOptions": {
    // Default RabbitMqTransportOptions values match default RabbitMQ configuration.
    // No additional configuration should be required for local hosting
  },
  "RedisOptions": {
    // ConnectionString: "localhost:6379,password=passw@rd"
    // Default RedisOptions values match default Redis configuration.
    // No additional configuration should be required for local hosting
  },
  "OpenSearchOptions": {
    "NodeUrls": [
      "https://10.18.8.31:9200",
      "https://10.18.8.32:9200"
    ],
    "BasicAuthentiction": {
      "Username": "kibanauser",
      "Password": "0123456789abcdefgijk"
    },
    "Index": "eid-audit*"
    // Optional
    //"MaximumRetries": 5,
    //"RequestTimeoutInSeconds": 60,
    //"MaxRetryTimeoutInSeconds": 60
  },
  "AesOptions": {
    "Key": "0123456789abcdefgijklmnoprstu012"
  },
  "StorageOptions": {
    "ExportAuditLogsCsvFilesLocation": "../audit-log-data"
  },
  "ClearLogOptions": {
    // Default time is Every day in 00:00:00
    "CronTab": "0 0 0 ? * * *",
    // Default RemoveOlderFilesInDays is 5 (days)
    "RemoveOlderFilesInDays": 5
  }
}