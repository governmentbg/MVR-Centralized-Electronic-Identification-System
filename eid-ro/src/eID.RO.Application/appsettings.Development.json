{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "System": "Information",
        "Microsoft": "Information"
      }
    },
    "Properties": {
      "EnvironmentSource": "xxx-Local"
    },
    "Using": [
      "Serilog.Expressions"
    ],
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "RequestPath like '/health%' and @l = 'Information'"
        }
      },
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "EndsWith(RequestPath, '/metrics')"
        }
      }
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.ff zzz} [{Level:u4}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "log/eID-RO-Application.log",
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": 10,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.ff zzz} [{Level:u4}] {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AuditLogger": {
    "EncryptionKey": "0123456789abcdefgijklmnoprstu012",
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/audit/%EID_SYSTEM_ID%-${random:uuid}_.log",
          "fileSizeLimitBytes": 50000,
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": 1,
          "rollingInterval": "Hour",
          "restrictedToMinimumLevel": "Debug",
          "outputTemplate": "{Message}{NewLine}",
          "hooks": "eID.PJS.AuditLogging.SerilogArchiveHooks::ArchiveHooksConfig, eID.PJS.AuditLogging"
        }
      }
    ],
    "useLocalTime": false,
    "testMode": false
  },
  "SerilogArchiveHooks": {
    "TargetDir": "logs/audit/ready"
  },
  "ConfigurationCryptoKeyProvider": {
    "EncryptionKey": "RO-Encryption-Keyxxxxx"
  },
  "ICryptoKeyProvider": {
    "Type": "eID.PJS.AuditLogging.ConfigurationCryptoKeyProvider, eID.PJS.AuditLogging"
  },
  "RabbitMqTransportOptions": {
    // Default RabbitMqTransportOptions values match default RabbitMQ configuration.
    // No additional configuration should be required for local hosting
    "Host": "localhost",
    "Port": 5672,
    "User": "guest",
    "Pass": "guest",
    "ManagementPort": 15672,
    "VHost": "/"
  },
  "RedisOptions": {
    "ConnectionString": "localhost:6379,password=passw@rd"
    // Default RedisOptions values match default Redis configuration.
    // No additional configuration should be required for local hosting
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=eid-ro;Username=postgres;Password=eid$pass",
    "QuartzNet": "Host=localhost;Database=quartznet;Username=postgres;Password=eid$pass"
  },
  "ApplicationUrls": {
    "PanHostUrl": "http://panapi-dev.mvreid.local",
    "PanPublicHostUrl": "http://panapipublic-dev.mvreid.local",
    "PivrHostUrl": "http://pivrapi-dev.mvreid.local",
    "IntegrationsHostUrl": "http://localhost:8002/integrations",
    "KeycloakHostUrl": "https://keycloak-dev.mvreid.local",
    "MpozeiHostUrl": "https://mpozeigw.mvreid.local",
    "SigningHostUrl": "http://localhost:60011"
  },
