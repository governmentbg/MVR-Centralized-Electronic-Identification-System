<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/color_ripple">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/default_small_corners_radius" />
            <solid android:color="@color/color_ripple" />
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/default_small_corners_radius" />
                    <solid android:color="@color/color_BF1212_disabled" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/default_small_corners_radius" />
                    <solid android:color="@color/color_BF1212" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>