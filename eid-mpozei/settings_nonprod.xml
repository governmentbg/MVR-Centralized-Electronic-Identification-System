<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
    <servers>
        <server>
            <id>digitall-maven-snapshots</id>
            <username>${env.NEXUS_USERNAME}</username>
            <password>${env.NEXUS_PASSWORD}</password>
        </server>
        <server>
            <id>digitall-maven-releases</id>
            <username>${env.NEXUS_USERNAME}</username>
            <password>${env.NEXUS_PASSWORD}</password>
        </server>
    </servers>
    <profiles>
        <profile>
            <id>nonprod</id>
            <properties>
                <pukWsdlUrl>http://nexus.nonprod.eid:8081/repository/File/puk/DataPreparationService.wsdl</pukWsdlUrl>
            </properties>
            <repositories>
                <repository>
                    <id>digitall-maven-releases</id>
                    <name>digitall-maven-releases</name>
                    <url>http://nexus.nonprod.eid:8081/repository/maven-releases/</url>
                    <layout>default</layout>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                </repository>
                <repository>
                    <id>digitall-maven-snapshots</id>
                    <name>digitall-maven-snapshots</name>
                    <url>http://nexus.nonprod.eid:8081/repository/maven-snapshots/</url>
                    <layout>default</layout>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                </repository>
            </repositories>
        </profile>
    </profiles>
    <mirrors>
        <mirror>
            <id>digitall-maven-releases</id>
            <mirrorOf>digitall-maven-releases</mirrorOf>
            <name>digitall-maven-releases</name>
            <url>http://nexus.nonprod.eid:8081/repository/maven-releases/</url>
        </mirror>
        <mirror>
            <id>digitall-maven-snapshots</id>
            <mirrorOf>digitall-maven-snapshots</mirrorOf>
            <name>digitall-maven-snapshots</name>
            <url>http://nexus.nonprod.eid:8081/repository/maven-snapshots/</url>
        </mirror>
        <mirror>
            <id>maven-default-http-blocker</id>
            <mirrorOf>digitall-maven-snapshots</mirrorOf>
            <name>digitall-maven-snapshots</name>
            <url>http://nexus.nonprod.eid:8081/repository/maven-snapshots/</url>
        </mirror>
    </mirrors>
    <proxies>
        <proxy>
            <host>proxy.nonprod.eid</host>
            <port>3128</port>
            <nonProxyHosts>*.bgidentity-dev.eid|*.nonprod.eid|localhost|127.*|[::1]</nonProxyHosts>
        </proxy>
    </proxies>
</settings>